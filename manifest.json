{
    "name": "Custom Scripts Keybinding",
    "version": "1.0",
    "description": "This extension lets you bind any script to a key that will run on the page once pressed.",
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab",
        "unlimitedStorage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "browser_action": {
        "default_title": "Set Scripts",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "manifest_version": 2
}